<body>
    <header>
        <div class="container">
            <div class="sp_wrapper">
                <div class="location"></div>

                <div class="faq">
                    <a class="faq_link" href="#">FAQ</a>

                </div>
            </div>
        </div>
    </header>

    <%= render 'menu' %>

    <div class="sp_promo_wrapper">
        <div class="container">
           <!--  <div class="breadcrumbs">
                <a class="breadcrumbs_link" href="#">home /</a>

                <a class="breadcrumbs_link" href="#">products /</a>

                <a class="breadcrumbs_link" href="#">Stack Parking System</a>
            </div> -->

            <div class="sp_promo">
                <h1 class="sp_promo_title"><%= Puzzle.last.title unless Puzzle.last.nil? %></h1>

                <p class="sp_promo_text">
                    <%= Puzzle.last.title unless Puzzle.last.nil? %>    
                </p>

                <a class="sp_promo_btn" href="#">GET A QUOTE</a>
            </div>
        </div>
    </div>

    <form id="form">
        <div class="form">
            <a class="form_close" href="#">
                <i class="far fa-times-circle" aria-hidden="true"></i>
            </a>

            <h2>Send Enquiry</h2>

            <label>
                Name

                <input id="name" type="text" placeholder="Name" required="required"></input>
            </label>

            <label>
                Email

                <input id="email" type="email" placeholder="Email" required="required"></input>
            </label>

            <label>
                Phone

                <input id="tel" type="tel" placeholder="Phone" required="required"></input>
            </label>

            <label>
                Message

                <textarea name="#" cols="0" rows="5" placeholder="hi, i like your puzzleparking system, and wonna order it..." required="required"></textarea>
            </label>

            <div class="submit">
                <button type="submit">Submit</button>
            </div>
        </div>
    </form>

    <div class="sp_features_wrapper">
        <div class="sp_features">
            <div class="container">
                <h2 class="sp_features_title">Special Features</h2>

                <div class="row">
                    <div class="sp_features_item col-12 col-md-4 d-flex flex-column justify-content-between">
                      <% PuzzleFeature.where(position: 'left').each do |puzzle_feature| %>
                        <div class="row p-b">
                            <span class="sp_features_icon <%= puzzle_feature.icon %> col-3"></span>

                            <div class="col-9">
                                <h5 class="sp_features_name"><%= puzzle_feature.title %></h5>

                                <p class="sp_features_text">
                                  <%= puzzle_feature.desc %>
                                </p>
                            </div>
                        </div>
                      <% end %>
                    </div>

                    <div class="sp_features_item col-12 col-md-4 d-flex flex-column justify-content-between">
                      <% PuzzleFeature.where(position: 'left').each do |puzzle_feature| %>
                        <div class="row p-b">
                            <span class="sp_features_icon <%= puzzle_feature.icon %> col-3"></span>

                            <div class="col-9">
                                <h5 class="sp_features_name"><%= puzzle_feature.title %></h5>

                                <p class="sp_features_text">
                                  <%= puzzle_feature.desc %>
                                </p>
                            </div>
                        </div>
                      <% end %>
                    </div>

                    <div class="sp_features_item col-12 col-md-4 sp_bg"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="visual_demo">
        <div class="container">
            <h4 class="visual_demo_title">
                Case: If you wish to retrieve Car No. 7
            </h4>

            <p class="visual_demo_desc">
                Parking makes us go in circles, see what our circles have in store for you...
            </p>

            <div class="d-flex justify-content-center flex-column align-items-center">
                <button class="mp4player" id="play">Retrieve Car â„–7</button>

                <div id="video-placeholder">
                    <iframe width="860" height="400" src="https://www.youtube.com/embed/jmAmAhruLQE?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen=""></iframe>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="gallery row justify-content-between">
            <div class="gallery_item col-12 col-md-6 pos-rel">
                <h2 class="gallery_item_title">SEE VIDEO</h2>
                <div class='video-wrapper'>
                    <a href="javascript://" class='button'></a>
                    <div class='video'>
                        <iframe id="player" width="560" height="300" src="https://www.youtube.com/embed/jmAmAhruLQE?showinfo=0" frameborder="0" allowfullscreen></iframe>
                        <a class="close" href="#"><img src="images/close.svg" alt=""></a>
                    </div>
                </div>
            </div>
            <div class="gallery_item col-12 col-md-6">
                <h2 class="gallery_item_title">SEE GALLERY</h2>
                <div class="row">
                        <a class="col-12 col-md-6 col-lg-4 img-wrap " href="https://source.unsplash.com/juHayWuaaoQ/1500x1000" data-fancybox="images" class="gallery_img"><img src="/uploads/parking.jpg"></a>
                        <a class="col-12 col-md-6 col-lg-4 img-wrap " href="https://source.unsplash.com/eWFdaPRFjwE/1500x1000" data-fancybox="images" class="gallery_img"><img src="/uploads/parking2.jpg"></a>
                        <a class="col-12 col-md-6 col-lg-4 img-wrap " href="https://source.unsplash.com/i2KibvLYjqk/1500x1000" data-fancybox="images" class="gallery_img"><img src="/uploads/parking3.jpg"></a>
                        <a class="col-12 col-md-6 col-lg-4 img-wrap " href="https://source.unsplash.com/RFgO9B_OR4g/1500x1000" data-fancybox="images" class="gallery_img"><img src="/uploads/parking4.jpg"></a>
                        <a class="col-12 col-md-6 col-lg-4 img-wrap " href="https://source.unsplash.com/7bwQXzbF6KE/1500x1000" data-fancybox="images" class="gallery_img"><img src="/uploads/parking5.jpg"></a>
                        <a class="col-12 col-md-6 col-lg-4 img-wrap " href="https://source.unsplash.com/NhU0nUR7920/1500x1000" data-fancybox="images" class="gallery_img"><img src="/uploads/parking6.jpg"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    

    <%= render 'footer' %>

    <script src="https://www.youtube.com/iframe_api"></script>

    <script type="text/javascript" src="/js/jquery-3.3.1.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.6/highlight.min.js"></script>

    <script type="text/javascript" src="/js/why.js"></script>

